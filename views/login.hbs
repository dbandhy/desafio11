<div class="container my-5">
	<div>
		<h1>Login de Usuario</h1>
		<br />
		<form
			class="form"
			action="/login"
			method="post"
			role="form"
			autocomplete="off"
		>

			<div class="form-group">
				<input
					id="nombre"
					name="username"
					placeholder="nombre"
					class="form-control"
					type="text"
					required
				/>
			</div>

			<div class="form-group">
				<input
					id="password"
					name="password"
					placeholder="password"
					class="form-control"
					type="password"
					required
				/>
			</div>

			<div class="form-group">
				<input type="submit" value="Login" />

			</div>

		</form>

		<hr />
		<div>
			<button
				
				onclick="location.href = '/register'"
			>Ir a Register</button>
		</div>
	</div>
</div>